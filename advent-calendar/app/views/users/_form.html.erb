
<%= form_with(model: user) do |form| %>
<div class= "flex flex-col content-center items-center mt-8">
<div class="bg-base-200 max-w-fit rounded-lg border p-4">
  <div class="fieldset ">
      <% if user.errors.any? %>
      <div class="">
        <h2><%= t :error, count: user.errors.count %> impidieron que este usuario pueda ser creado:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form.label :email, class: "label" %>
    <%= form.email_field :email, class: "input" %>
    <%= form.label :username, class: "label" %>
    <%= form.text_field :username, class: "input" %>
    <%= form.label :password, class: "label" %>
    <%= form.password_field :password, class: "input" %>
    <%= form.label :password_confirmation, class: "label" %>
    <%= form.password_field :password_confirmation, class: "input" %>
    <%= form.submit nil, class: "btn btn-primary" %>

 </div>
</div>
</div>
<% end %>
