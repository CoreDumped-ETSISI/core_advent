<%= form_with(model: [@problem, @answer], local: true) do |form| %>
  <% if @answer.errors.any? %>
    <div style="color: red">
      <h2><%= t :error, count: @answer.errors.count %> impidieron que esta respuesta pueda ser creada:</h2>

      <ul>
        <% @answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :answer_text, style: "display: block" %>
    <%= form.text_field :answer_text %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
